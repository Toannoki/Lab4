@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ASC.Web.Areas.Accounts.Models.ProfileModel
@{
    Layout = "_SecureLayout";
}

<div class="row">
    <div style="margin-top: 20px" class="col s12 padding-left-20px padding-right-20px">
        <!-- Details Section -->
        <div class="col s12 depth-3">
            <div class="section white-text padding-left-10px blue-grey lighten-1">
                <h5 class="margin-0">Thông tin tài khoản</h5>
            </div>

            <div class="divider"></div>

            <form asp-controller="Account" asp-action="Profile" method="post" class="col s12" id="formUser">
                <div class="input-field col s4">
                    <input asp-for="UserName" class="validate" />
                    <label asp-for="UserName"></label>
                </div>

                <div class="input-field col s4 right-align">
                    <button class="waves-effect waves-light btnSubmit btn" type="submit" name="action">
                        <i class="material-icons right">send</i> Save
                    </button>
                    <button class="btn waves-effect waves-light reset red lighten-1" type="button" name="action">
                        Reset
                    </button>
                </div>

                <div class="row col s12 right-align" asp-validation-summary="All"></div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            //Xử lý khi bấm nút Reset
            $(document).on('click', '.reset', function () {
                $('#formUser')[0].reset();
                // Nếu cần thay đổi nội dung nút sau khi reset:
                // $('.btnSubmit').text('Tạo mới');
            });

            //Cập nhật email hidden nếu cần (nếu có thêm input ẩn)
            $(document).on('click', '.btnSubmit', function () {
                // Ví dụ gọi hàm update: m.updateTextField();
            });
        });
    </script>
}